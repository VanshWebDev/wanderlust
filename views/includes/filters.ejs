<style>
    .filters {
        display: flex;
    }

    .filter {
        height: 100px;
        width: 100px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .taxBtn {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>

<script>
 document.addEventListener("DOMContentLoaded", function() {
    let chkBox = document.querySelector('#flexSwitchCheckDefault');
    let gst = document.querySelectorAll(".gst");
    
    chkBox.addEventListener("change", function() {
        if (chkBox.checked) {
            for (const element of gst) {
                element.removeAttribute('hidden');
            }
        } else {
            for (const element of gst) {
                element.setAttribute('hidden', 'true'); // Hide the element again if checkbox is unchecked
            }
        }
    });
});

</script>